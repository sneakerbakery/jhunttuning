---
import car from "../assets/car.png";
---

<section class="hero">
  <div class="content">
    <h1 class="title">
      <span>Top Tier</span><br />
      <em>LS Tuning</em>
    </h1>

   <div class="glitch-wrap" style={`--img: url(${car.src})`}>
  <img src={car.src} alt="Top Tier Tuning" class="hero-img" />
  <span class="gl-s gl-s1"></span>
  <span class="gl-s gl-s2"></span>
  <span class="gl-s gl-s3"></span>
  <span class="gl-s gl-s4"></span>
  <span class="gl-s gl-s5"></span>
</div>
  </div>
    <div class="buttons">
     <button class="btn ghost" disabled>Sold Out</button>
      <a href="#waitlist" class="btn primary">Join Waitlist</a>
     </div>

  <style>
   .hero {
      color: #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      
     
    }
.content {
  position: relative;
  display: grid;           /* overlap children */
  max-width: 1100px;
  width: min(90vw, 1100px);
  margin: 0 auto;          /* center the whole content block */
}

/* Image centered and responsive */
/* Wrapper sits where your image was */
.glitch-wrap {
  grid-area: 1 / 1;
  justify-self: center;
  position: relative;
  width: clamp(320px, 70%, 1100px);
  z-index: 1;
  display: block;
}

/* Base image (the “normal” layer) */
.hero-img {
  display: block;
  width: 100%;
  height: auto;
  filter: contrast(1.05) brightness(1.05);
  animation: imgGlitchBase 3.2s infinite steps(12);
}

/* Slices: reuse same image as background */
.gl-s {
  position: absolute;
  inset: 0;
  background-image: var(--img);
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  mix-blend-mode: screen;
  opacity: 0.85;
  pointer-events: none;
  /* each slice anim shifts horizontally */
  animation: sliceShift 2.6s infinite steps(18);
}

/* Different clip bands + timings per slice */
.gl-s1 { clip-path: inset( 8%  0 76% 0); animation-duration: 2.2s; transform: translateX(0); }
.gl-s2 { clip-path: inset(28%  0 56% 0); animation-duration: 2.6s; }
.gl-s3 { clip-path: inset(46%  0 38% 0); animation-duration: 2.0s; }
.gl-s4 { clip-path: inset(62%  0 22% 0); animation-duration: 2.8s; }
.gl-s5 { clip-path: inset(78%  0  6% 0); animation-duration: 2.4s; }

/* subtle color splits per slice for that digital tear vibe */
.gl-s1 { filter: hue-rotate(10deg)  saturate(1.15); }
.gl-s2 { filter: hue-rotate(-10deg) saturate(1.1); }
.gl-s3 { filter: none; }
.gl-s4 { filter: hue-rotate(190deg) saturate(1.2); }
.gl-s5 { filter: hue-rotate(320deg) saturate(1.2); }

/* Base image tiny flicker */
@keyframes imgGlitchBase {
  0%, 92%, 100% { transform: none; filter: none; }
  94% { transform: translate(-1px, 0.5px) skewX(0.2deg); }
  96% { transform: translate(1px, -0.5px); }
}

/* Side-to-side slice motion (random-ish pattern) */
@keyframes sliceShift {
  0%   { transform: translateX(0);       opacity: 0.9; }
  10%  { transform: translateX(-3px);    }
  12%  { transform: translateX(3px);     }
  20%  { transform: translateX(1px);     }
  22%  { transform: translateX(-2px);    }
  40%  { transform: translateX(0);       opacity: 0.85; }
  55%  { transform: translateX(2px);     }
  58%  { transform: translateX(-4px);    }
  75%  { transform: translateX(0);       }
  92%  { transform: translateX(6px);     opacity: 0.95; }
  96%  { transform: translateX(-6px);    }
  100% { transform: translateX(0);       opacity: 0.9; }
}


/* Title stays left, scales with viewport, wraps nicely */
.title {
  grid-area: 1 / 1;
  padding-left: clamp(48px, 3vw, 48px);
  align-self: start;
  justify-self: start;
  text-align: left;          /* ← makes inner text left-justified */
  margin: 0;
  color: #fff;
  font-weight: 800;
  line-height: 0.95;
  font-size: clamp(36px, 6.5vw, 110px);
  max-width: 45%;
  z-index: 2;
  pointer-events: none;
  text-shadow: 0 2px 0 rgba(0,0,0,.25);
}
       
   /* Buttons are outside the grid so they're always below */
.buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 1.25rem;     /* space under the image/title stack */
}

    .btn {
      padding: 0.75rem 1.75rem;
      border-radius: 999px;
      font-weight: 600;
      font-size: 1rem;
      border: none;
      cursor: pointer;
      transition: transform 0.15s ease, opacity 0.15s ease;
      text-decoration: none;
    }

  .btn.primary {
  background: red;
  color: #fff;
  
  

}

.btn.primary:hover {
 
  box-shadow: 0 6px 30px red;
}

    .btn.ghost {
      background: #222;
      color: #888;
      cursor: not-allowed;
      opacity: 0.8;
    }

  
   /* Mobile tweaks */
@media (max-width: 768px) {
  .content {
    width: 94vw;
  }

  .title {
    /* Make text a little bigger but not huge */
    font-size: clamp(32px, 10vw, 72px);

    /* Move it up and in a bit so it sits less over the image */
    max-width: 65%;
    padding-left: clamp(20px, 4vw, 36px);

    /* Push the text slightly higher over the car */
    transform: translateY(-5%);
  }

  .hero-img {
    width: 100%;
    margin-top: 3rem; /* creates extra space between text and image */
  }

  .buttons {
    margin-top: clamp(16px, 4vh, 28px);
  }
}

@media (prefers-reduced-motion: reduce) {
  .hero-img, .gl-s { animation: none !important; transform: none !important; }
}
  </style>
</section>
