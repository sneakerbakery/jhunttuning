---
import car from "../assets/car.png";
---

<section class="hero">
  <div class="content">
    <h1 class="title">
      <span>Top Tier</span><br />
      <em>LS Tuning</em>
    </h1>

    <img src={car.src} alt="Top Tier Tuning" class="hero-img" />
  </div>
    <div class="buttons">
     <button class="btn ghost" disabled>Sold Out</button>
      <a href="#waitlist" class="btn primary">Join Waitlist</a>
     </div>

  <style>
   .hero {
      color: #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      
     
    }
.content {
  position: relative;
  display: grid;           /* overlap children */
  max-width: 1100px;
  width: min(90vw, 1100px);
  margin: 0 auto;          /* center the whole content block */
}

/* Image centered and responsive */
.hero-img {
  grid-area: 1 / 1;
  justify-self: center;    /* centers even when width < 100% */
  width: clamp(320px, 70%, 1100px);
  height: auto;
  z-index: 1;
}

/* Title stays left, scales with viewport, wraps nicely */
.title {
  grid-area: 1 / 1;
  padding-left: clamp(48px, 3vw, 48px);
  align-self: start;
  justify-self: start;
  text-align: left;          /* â† makes inner text left-justified */
  margin: 0;
  color: #fff;
  font-weight: 800;
  line-height: 0.95;
  font-size: clamp(36px, 6.5vw, 110px);
  max-width: 45%;
  z-index: 2;
  pointer-events: none;
  text-shadow: 0 2px 0 rgba(0,0,0,.25);
}
       
   /* Buttons are outside the grid so they're always below */
.buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 1.25rem;     /* space under the image/title stack */
}

    .btn {
      padding: 0.75rem 1.75rem;
      border-radius: 999px;
      font-weight: 600;
      font-size: 1rem;
      border: none;
      cursor: pointer;
      transition: transform 0.15s ease, opacity 0.15s ease;
      text-decoration: none;
    }

  .btn.primary {
  background: linear-gradient(135deg, #FF2729, #000);
  color: #fff;
  
  box-shadow: 0 4px 20px rgba(255, 39, 41, 0.4);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.btn.primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 6px 30px rgba(255, 39, 41, 0.6);
}

    .btn.ghost {
      background: #000;
      color: #BBB;
      cursor: not-allowed;
      opacity: 0.8;
    }

  
   /* Mobile tweaks */
@media (max-width: 768px) {
  .content { width: 94vw; }
  .title {
    max-width: 70%;        /* give more room on small screens */
    font-size: clamp(28px, 9vw, 64px);
  }
  .hero-img { width: 100%; }
}
  </style>
</section>
