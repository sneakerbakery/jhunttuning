<section class="glitch" aria-hidden="true"></section>

<style>
  /* Tweak these to taste */
  .glitch {
    --intensity: 0.25;          /* 0â€“1 overall strength */
    --scan-opacity: 0.12;       /* scanline strength */
    --noise-opacity: 0.08;      /* static noise strength */
    --bar-opacity: 0.22;        /* glitch bar strength */
    --red: 255,39,41;           /* your FF2729 */
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 5;                 /* bump to 0 if you want it behind content */
    mix-blend-mode: screen;     /* keeps it additive on dark bg */
  }

  /* 1) Scanlines */
  .glitch::before {
    content: "";
    position: absolute; inset: 0;
    background: repeating-linear-gradient(
      to bottom,
      rgba(255,255,255,var(--scan-opacity)) 0px,
      rgba(255,255,255,var(--scan-opacity)) 1px,
      transparent 2px,
      transparent 3px
    );
    opacity: calc(var(--intensity));
    animation: scanMove 6s linear infinite;
  }

  /* 2) Static/flicker noise */
  .glitch::after {
    content: "";
    position: absolute; inset: 0;
    background:
      radial-gradient(circle at 20% 80%, rgba(var(--red),0.05), transparent 35%),
      radial-gradient(circle at 80% 30%, rgba(var(--red),0.05), transparent 40%),
      repeating-linear-gradient(
        0deg,
        rgba(255,255,255,var(--noise-opacity)) 0 1px,
        transparent 1px 2px
      );
    opacity: calc(var(--intensity));
    animation: noiseFlicker 1.8s steps(6) infinite alternate;
  }

  /* 3) Glitch bars layer */
  .glitch-bars {
    position: absolute; inset: 0;
    background:
      repeating-linear-gradient(
        to bottom,
        rgba(var(--red), var(--bar-opacity)) 0 12px,
        transparent 12px 22px
      );
    opacity: 0;                 /* shown during bursts */
    animation: barsSweep 7s linear infinite;
    mix-blend-mode: screen;
  }

  @keyframes scanMove {
    from { background-position: 0 0; }
    to   { background-position: 0 8px; } /* subtle drift */
  }
  @keyframes noiseFlicker {
    0%   { filter: brightness(1) contrast(1); }
    50%  { filter: brightness(1.05) contrast(1.05); }
    100% { filter: brightness(0.98) contrast(1.02); }
  }
  @keyframes barsSweep {
    0%, 70% { opacity: 0; transform: translateY(0); }
    72%     { opacity: 1; transform: translateY(-8px); }
    76%     { opacity: .6; transform: translateY(6px); }
    80%     { opacity: 0; transform: translateY(0); }
    100%    { opacity: 0; }
  }

  /* Motion respect */
  @media (prefers-reduced-motion: reduce) {
    .glitch::before, .glitch::after, .glitch-bars { animation: none; }
  }
</style>

<!-- Extra element for glitch bars -->
<div class="glitch-bars" aria-hidden="true"></div>
